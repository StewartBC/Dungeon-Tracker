<h1>Dungeons</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Dungeons to Complete:</h2>
      <ul>
        {{#each dungeons}} {{#if completed}}
        <li>{{this.dungeon_name}}</li>
        <button data-id="{{this.id}}">Completed</button>
        {{/if}} {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2>Completed Dungeons:</h2>
      <ul>
        {{#each dungeons}} {{#unless completed}}
        <li>{{this.dungeon_name}}</li>
        <button class="completed" data-id="{{this.id}}">Completed</button>
        {{/unless}} {{/each}}
      </ul>
    </div>
  </div>
</div>

<h2>Add a Dungeon:</h2>
<form class="create-form">

  <div class="form-group">
    <label for="dungeon">Dungeon Name:</label>
    <input type="text" id="dungeon" name="name">
  </div>

  <div class="form-group">
    <label for="completed">Completed?</label>
    <br>
    <input type="radio" name="completed" value="1" checked> Yes
    <br>
    <input type="radio" name="completed" value="0"> No
  </div>

  <button type="submit">Add Dungeon</button>
</form>